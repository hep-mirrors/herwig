# location of include files
THEPEGINCLUDE =
GSLINCLUDE  =
HERWIGINCLUDE =
EVTGENINCLUDE =-I/home/richardn/montecarlo/c++/evtgen/evtgenlhc
INCLUDE = $(THEPEGINCLUDE) $(GSLINCLUDE) $(HERWIGINCLUDE) $(EVTGENINCLUDE)
#
# C++ flags
# 
CXX = g++
CXXFLAGS = -O2

ALLCCFILES=$(shell echo *.cc)

default : HwEvtGen.so

%.o : %.cc %.h
	$(CXX) -fPIC $(CPPFLAGS) $(INCLUDE) $(CXXFLAGS) -c -shared $< -o $@  

HwEvtGen.so: EvtGen.o  EvtGenDecayer.o
	$(CXX) -fPIC $(CPPFLAGS) $(INCLUDE) $(CXXFLAGS) \
		  EvtGen.o  EvtGenDecayer.o -shared -o HwEvtGen.so

clean:
	rm -f $(ALLCCFILES:.cc=.o) HwEvtGen.so
