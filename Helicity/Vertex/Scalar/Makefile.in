OBJECTS = libHwSVertex.so

SOURCES := $(wildcard *.cc) $(wildcard Vector/*.cc)

LIBOBJECTS := $(SOURCES:.cc=.o)

INCLUDEFILES := $(wildcard *.*h*) $(wildcard *.icc) $(wildcard *.tcc)
LIBFILES := $(OBJECTS)
INCLUDEDIR = Helicity/Vertex/Scalar

include ../../../Config/Makefile.common

$(OBJECTS): $(LIBOBJECTS)
	@cd $(SRCDIR)/lib; rm -f $(LIBOBJECTS)
	$(CXX) $(CXXFLAGS) $(CXXDEBUGFLAG) $(CXXOPTFLAG) $(CXXDLFLAGS) $(LIBOBJECTS) -o $@
	@ln -f -s `pwd`/$@ $(SRCDIR)/lib
