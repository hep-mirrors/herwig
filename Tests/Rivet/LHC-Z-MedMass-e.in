##################################################
# Rivet analyses at the Z pole
##################################################
read LHCBase.in

##################################################
# LEP physics parameters (override defaults) 
##################################################
cd /Herwig/Generators
cd /Herwig/Cuts

## Cut on lepton pair invariant mass
set QCDCuts:MHatMin 20.*GeV
set MassCut:MinM 40.*GeV
set MassCut:MaxM 130.*GeV

##################################################
#  Use the q qbar matrix element
##################################################
cd /Herwig/MatrixElements
# Drell-Yan Z/gamma
insert SimpleQCD:MatrixElements[0] MEqq2gZ2ff
set MEqq2gZ2ff:Process Electron

# No QED radiation
#erase /Herwig/EventHandlers/LHCHandler:PostSubProcessHandlers 0

##################################################
# select the analyses
##################################################

# LHC B med mass
insert /Herwig/Analysis/RivetAnalysis:Analyses 0 LHCB_2012_I1208102
##################################################
# Save run for later usage with 'Herwig++ run'
##################################################
cd /Herwig/Generators
saverun LHC-Z-MedMass-e LHCGenerator
