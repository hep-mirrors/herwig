##################################################
# Rivet analyses at the Z pole
##################################################
read LHCBase.in

##################################################
#  Use the q qbar matrix element
##################################################
cd /Herwig/MatrixElements
# Drell-Yan Z/gamma
insert SimpleQCD:MatrixElements[0] MEWJet
set MEWJet:WDecay Electron

# No QED radiation
erase /Herwig/EventHandlers/LHCHandler:PostSubProcessHandlers 0

set /Herwig/Cuts/WBosonKtCut:MinKT 190.0*GeV

##################################################
# select the analyses
##################################################

# CMS jet mass
insert /Herwig/Analysis/RivetAnalysis:Analyses 0 CMS_2013_I1224539_WJET

##################################################
# Save run for later usage with 'Herwig++ run'
##################################################
cd /Herwig/Generators
saverun LHC-7-W-Jet-2-e LHCGenerator
