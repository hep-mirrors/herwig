##################################################
# Rivet analyses at the Z pole
##################################################
read LEPBase-Matchbox.in

## Select the process
do /Herwig/MatrixElements/Matchbox/EEFactory:Process e- e+ j j

##################################################
# LEP physics parameters (override defaults) 
##################################################
cd /Herwig/Generators
set /Herwig/MatrixElements/Matchbox/Scales/FixedScale:FixedScale 14.*GeV
set LEPGenerator:EventHandler:LuminosityFunction:Energy 14.
set /Herwig/Cuts/EECuts:MHatMin 13.*GeV

##################################################
# select the analyses 
##################################################

# tasso event shapes at various low energies
insert /Herwig/Analysis/RivetAnalysis:Analyses 0 TASSO_1990_S2148048

##################################################
# Save run for later usage with 'Herwig++ run'
##################################################
cd /Herwig/Generators
saverun LEP-Matchbox-14 LEPGenerator
