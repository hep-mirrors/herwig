# -*- ThePEG-repository -*-
read snippets/PPCollider.in
cd /Herwig/Generators
set EventGenerator:NumberOfEvents 100000000
set EventGenerator:RandomNumberGenerator:Seed 31122001
set EventGenerator:PrintEvent 10
set EventGenerator:MaxErrors 10000
set EventGenerator:EventHandler:CascadeHandler:MPIHandler NULL
set EventGenerator:EventHandler:DecayHandler NULL
set EventGenerator:EventHandler:HadronizationHandler NULL
erase EventGenerator:EventHandler:PostSubProcessHandlers 0
set /Herwig/Analysis/Basics:CheckQuark 0
set /Herwig/Particles/h0:Stable Stable
set EventGenerator:EventHandler:LuminosityFunction:Energy 14000.0
set /Herwig/Shower/ShowerHandler:IntrinsicPtGaussian 2.2*GeV
cd /Herwig/MatrixElements/
insert SubProcess:MatrixElements[0] PowhegMEPP2WH
set /Herwig/Cuts/JetKtCut:MinKT 0.0*GeV
set /Herwig/Particles/p+:PDF    /Herwig/Partons/MRST-NLO-old
set /Herwig/Particles/pbar-:PDF /Herwig/Partons/MRST-NLO-old
create Herwig::O2AlphaS O2AlphaS 
set /Herwig/Generators/EventGenerator:StandardModelParameters:QCD/RunningAlphaS O2AlphaS
cd /Herwig/Shower
# use the general recon for now
set KinematicsReconstructor:ReconstructionOption General
# switch treatment of hardest emission
set ShowerHandler:HardEmission POWHEG
cd /Herwig/Generators
create Herwig::VHTest /Herwig/Analysis/VHTest HadronJetTest.so
insert EventGenerator:AnalysisHandlers 0 /Herwig/Analysis/VHTest

set /Herwig/Particles/W+/W+->bbar,c;:YesNo No
set /Herwig/Particles/W+/W+->c,dbar;:YesNo No
set /Herwig/Particles/W+/W+->c,sbar;:YesNo No
set /Herwig/Particles/W+/W+->nu_e,e+;:YesNo Yes
set /Herwig/Particles/W+/W+->nu_mu,mu+;:YesNo No
set /Herwig/Particles/W+/W+->nu_tau,tau+;:YesNo No
set /Herwig/Particles/W+/W+->sbar,u;:YesNo No
set /Herwig/Particles/W+/W+->u,dbar;:YesNo No
set /Herwig/Particles/W-/W-->b,cbar;:YesNo No
set /Herwig/Particles/W-/W-->cbar,d;:YesNo No
set /Herwig/Particles/W-/W-->cbar,s;:YesNo No
set /Herwig/Particles/W-/W-->nu_ebar,e-;:YesNo Yes
set /Herwig/Particles/W-/W-->nu_mubar,mu-;:YesNo No
set /Herwig/Particles/W-/W-->nu_taubar,tau-;:YesNo No
set /Herwig/Particles/W-/W-->s,ubar;:YesNo No
set /Herwig/Particles/W-/W-->ubar,d;:YesNo No
set /Herwig/Particles/Z0/Z0->b,bbar;:YesNo No
set /Herwig/Particles/Z0/Z0->c,cbar;:YesNo No
set /Herwig/Particles/Z0/Z0->d,dbar;:YesNo No
set /Herwig/Particles/Z0/Z0->e-,e+;:YesNo Yes
set /Herwig/Particles/Z0/Z0->mu-,mu+;:YesNo No
set /Herwig/Particles/Z0/Z0->nu_e,nu_ebar;:YesNo No
set /Herwig/Particles/Z0/Z0->nu_mu,nu_mubar;:YesNo No
set /Herwig/Particles/Z0/Z0->nu_tau,nu_taubar;:YesNo No
set /Herwig/Particles/Z0/Z0->s,sbar;:YesNo No
set /Herwig/Particles/Z0/Z0->tau-,tau+;:YesNo No
set /Herwig/Particles/Z0/Z0->u,ubar;:YesNo No
saverun LHC-WHJet-Powheg EventGenerator

