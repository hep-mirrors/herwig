OBJECTS = libHwPDT.so

SOURCES := $(wildcard *.cc)

HEADERS := $(wildcard *.h)

LIBOBJECTS := $(SOURCES:.cc=.o)

include ../Config/Makefile.common

$(OBJECTS): $(LIBOBJECTS)
	@cd $(SRCDIR)/lib; rm -f $(LIBOBJECTS)
	$(CXX) $(CXXFLAGS) $(CXXDEBUGFLAG) $(CXXOPTFLAG) $(CXXDLFLAGS) $(LIBOBJECTS) -o $@
	@ln -f -s `pwd`/$@ $(SRCDIR)/lib
