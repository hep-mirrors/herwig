inline void BasicConsistency::doinit() throw(InitException) {
  AnalysisHandler::doinit();
}

inline void BasicConsistency::dofinish() {
  AnalysisHandler::dofinish();
  cerr << "\nBasicConsistency: maximum 4-momentum violation: " 
       << _epsmom/GeV << " GeV\n";
}

inline void BasicConsistency::doinitrun() {
  AnalysisHandler::doinitrun();
}

inline void BasicConsistency::rebind(const TranslationMap & trans)
  throw(RebindException) {
  // dummy = trans.translate(dummy);
