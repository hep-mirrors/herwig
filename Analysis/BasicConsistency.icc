namespace Herwig {

inline BasicConsistency::BasicConsistency() : _epsmom(0.0) {}

inline BasicConsistency::BasicConsistency(const BasicConsistency & x)
  : AnalysisHandler(x), _epsmom(x._epsmom) {}

inline IBPtr BasicConsistency::clone() const {
  return new_ptr(*this);
}

inline IBPtr BasicConsistency::fullclone() const {
  return new_ptr(*this);
}

