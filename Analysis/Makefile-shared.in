# location of include files
THEPEGINCLUDE = @THEPEGINCLUDE@
CLHEPINCLUDE  = @CLHEPINCLUDE@
INCLUDE = $(THEPEGINCLUDE) $(CLHEPINCLUDE) -I@prefix@/include
#
# C++ flags
# 
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@
#
# Analysis lib
#
ANALYSIS_SRC = $(shell echo *.cc)
ANALYSIS_OBJ = $(ANALYSIS_SRC:.cc=.o)
HwAnalysis.so: $(ANALYSIS_OBJ)
	$(CXX) $(CXXFLAGS) -shared $(ANALYSIS_OBJ) -o $@
#
#  object files
#
$(ANALYSIS_OBJ): %.o : %.cc %.icc %.fh %.h
	@echo Compiling $<
	@$(CXX) -c -fPIC $(CPPFLAGS) $(INCLUDE) $< -o $@
#
#  make clean
#
clean:
	rm *.o *.so
