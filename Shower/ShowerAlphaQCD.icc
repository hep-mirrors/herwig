namespace Herwig {

inline ShowerAlphaQCD::ShowerAlphaQCD() {}

inline ShowerAlphaQCD::ShowerAlphaQCD(const ShowerAlphaQCD & x)
  : ShowerAlpha(x) {}

inline IBPtr ShowerAlphaQCD::clone() const {
  return new_ptr(*this);
}

inline IBPtr ShowerAlphaQCD::fullclone() const {
  return new_ptr(*this);
}

  // replace with more sensible minimum 
inline double ShowerAlphaQCD::overestimateValue() {
  // return value(1.0*GeV2);
  // could as well be independent of that scale! 
  return value(sqr(_pointerShowerConstrainer->cutoffQScale(ShowerIndex::QCD)));
}

