namespace Herwig {


inline RhoDMatrixPropagator::RhoDMatrixPropagator() 
  : _hardSubME( tMEPtr() ),
    _decayer( tDecayerPtr() ),
    _splitFun( tSplitFunPtr() ),
    _onoffSwitchMode( 1 )
{}


inline RhoDMatrixPropagator::RhoDMatrixPropagator(const RhoDMatrixPropagator & x)
  : Pythia7::HandlerBase(x),
	     _hardSubME( x._hardSubME ),
	     _decayer( x._decayer ),
	     _splitFun( x._splitFun ),
	     _onoffSwitchMode( x._onoffSwitchMode )
{}


inline bool RhoDMatrixPropagator::isRhoDPropagationON() const {
  return _onoffSwitchMode; 
}


