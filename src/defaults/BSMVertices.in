######################################################
# Create the BSM vertices
# They are set to the appropriate model in a run file
######################################################
mkdir /Herwig/Vertices/BSM
cd /Herwig/Vertices/BSM

# R-S Model
library HwRSModel.so
create Herwig::RSModelFFGRVertex RS_FFGRVertex
create Herwig::RSModelFFVGRVertex RS_FFVGRVertex
create Herwig::RSModelSSGRVertex RS_SSGRVertex
create Herwig::RSModelVVGRVertex RS_VVGRVertex
create Herwig::RSModelVVVGRVertex RS_VVVGRVertex

# MSSM
library HwSusy.so
create Herwig::SSWSSVertex MSSM_WSS
