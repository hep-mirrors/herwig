read Merging/MergingLHC.in


cd /Herwig/Merging

set /Herwig/DipoleShower/DipoleShowerHandler:RenormalizationScaleFactor 1.
set /Herwig/DipoleShower/DipoleShowerHandler:FactorizationScaleFactor 1.
set /Herwig/DipoleShower/DipoleShowerHandler:HardScaleFactor 1.
set PPMFactory:RenormalizationScaleFactor 1.
set PPMFactory:FactorizationScaleFactor 1.

set PPMFactory:onlyabove 0

set Merger:chooseHistory 8
set Merger:addNLOLegs -1
set Merger:addLOLegs 1
set Merger:MergingScale 15.*GeV
set Merger:MergingScaleSmearing 0.1
set Merger:gamma 1.

cd /Herwig/Merging
set PPMFactory:OrderInAlphaS 2
set PPMFactory:OrderInAlphaEW 0
do PPMFactory:Process p p j j

cd /Herwig/MatrixElements/Matchbox/Scales/
set  /Herwig/Merging/MScale:ScaleChoice MaxJetPtScale

cd /Herwig/Cuts
create ThePEG::Cuts Cuts
insert JetCuts:JetRegions 0 FirstJet
insert Cuts:MultiCuts 0 JetCuts
set Cuts:JetFinder JetFinder
set Cuts:ScaleMin 2.0*GeV
set Cuts:X1Min 1.0e-5
set Cuts:X2Min 1.0e-5




cd /Herwig/MatrixElements/Matchbox/Amplitudes
clear /Herwig/Merging/PPMFactory:Amplitudes
insert /Herwig/Merging/PPMFactory:Amplitudes 0 MadGraph

clear /Herwig/Analysis/Rivet:Analyses
insert /Herwig/Analysis/Rivet:Analyses 0 MC_XS
insert /Herwig/Analysis/Rivet:Analyses 0 MC_JETS
insert /Herwig/Analysis/Rivet:Analyses 0 CMS_2011_S8968497
insert /Herwig/Analysis/Rivet:Analyses 0 CMS_2011_S8950903
insert /Herwig/Analysis/Rivet:Analyses 0 CMS_2014_I1298810
insert /Herwig/Analysis/Rivet:Analyses 0 CMS_2013_I1208923
insert /Herwig/Analysis/Rivet:Analyses 0 CMS_2012_I1184941
insert /Herwig/Analysis/Rivet:Analyses 0 ATLAS_2014_I1326641
insert /Herwig/Analysis/Rivet:Analyses 0 ATLAS_2014_I1325553
insert /Herwig/Analysis/Rivet:Analyses 0 ATLAS_2014_I1307243

cd /Herwig/Generators
saverun 2LO-0NLO-LHC-J LHCGenerator
