################################################
# Set up the physics model.
# 
# The Standard Model is used by default. 
################################################
# Main SM object
create Herwig::StandardModel /Defaults/Model

## Couplings
# the strong coupling
create /ThePEG/O1AlphaS /Defaults/AlphaS O1AlphaS.so
set /Defaults/Model:QCD/RunningAlphaS /Defaults/AlphaS
# the electromagetic coupling
create /ThePEG/SimpleAlphaEM /Defaults/AlphaEM SimpleAlphaEM.so
set /Defaults/Model:EW/RunningAlphaEM /Defaults/AlphaEM
# the CKM matrix
create Herwig::StandardCKM /Defaults/CKM
set /Defaults/Model:EW/CKM /Defaults/CKM
# the running mass
create Herwig::RunningMass /Defaults/RunningMass
set /Defaults/RunningMass:MaxFlav 6
set /Defaults/RunningMass:QCDOrder 2
set /Defaults/Model:RunningMass /Defaults/RunningMass

mkdir /Defaults/Vertices
cd /Defaults/Vertices
read StandardModelVertices.in 
read BSMVertices.in

#################################################
# Create the BSM machinery
# This only gets switched on in read if it is
# requested by the user
################################################
mkdir /Defaults/NewPhysics
cd /Defaults/NewPhysics
create /Herwig/ModelGenerator NewModel
create /Herwig/HardProcessConstructor HPConstructor
create /Herwig/DecayConstructor DecayConstructor
create /Herwig/TwoBodyDecayConstructor TwoBodyDC

# Required to decay the particles before showering so as to keep
# the spin correlations in the decay
cd /Defaults/Handlers
create /Herwig/HwDecayHandler NewModelDecayHandler
set NewModelDecayHandler:NewStep Current

cd /
