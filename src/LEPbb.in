# This will read in all the standard hadron decay modes and add
# the new particles that are used in HERWIG 6.4, but not in Pythia7
#read Decays.in
#
cd /Defaults/
set theGlobalParameters:EffectiveGluonMass 0.750*GeV
set theGlobalParameters:HadronizationScale 0.5*GeV
#set theGlobalParameters:OnOffPythia7StringFragmentationMode 0
set theGlobalParameters:OnOffSoftUnderlyingEventMode 0
set theGlobalParameters:MinVirtuality2 0.1*GeV2
set theGlobalParameters:MaxDisplacement 1.0e-10*millimeter
#
cd /Defaults/Handlers/Shower
set theRhoDMatrixPropagator:OnOffRhoDPropagationMode 0
set theShowerConstrainer:OnOffMultiScaleShowerMode 0
set theShowerConstrainer:OnOffDecayBeforeShowerMode 0
set theShowerConstrainer:CutoffQCDMassScale 0.75*GeV
set theShowerConstrainer:CutoffQEDMassScale 0.75*GeV
set theShowerConstrainer:CutoffEWKMassScale 91.0*GeV
set theShowerConstrainer:cutoffKinScale 0.75*GeV
set theMECorrections:OnOffMECorrectionMode 0
set theMECorrections:OnOffComposeMECorrectionMode 0
set theDrellYanMECorrection:OnOffMECorrectionMode 0
set theIS_ShowerAlphaQCD:ScaleFactor 1.0
#set theIS_ShowerAlphaQCD:ShowerConstrainer theShowerConstrainer
set theFS_ShowerAlphaQCD:ScaleFactor 1.0
#set theFS_ShowerAlphaQCD:ShowerConstrainer theShowerConstrainer
set theIS_ShowerAlphaQED:ScaleFactor 1.0
#set theIS_ShowerAlphaQED:ShowerConstrainer theShowerConstrainer
set theFS_ShowerAlphaQED:ScaleFactor 1.0
set theIS_ShowerAlphaQCD:NPAlphaS 2
set theFS_ShowerAlphaQCD:NPAlphaS 2
#set theIS_ShowerAlphaQCD:Qmin 12.345*GeV
#set theFS_ShowerAlphaQCD:Qmin 12.345*GeV
#set theFS_ShowerAlphaQED:ShowerConstrainer theShowerConstrainer
set theSplittingGenerator:OnOffQCDinteractionMode 1
set theSplittingGenerator:OnOffQEDinteractionMode 1
set theSplittingGenerator:OnOffEWKinteractionMode 0
set theSplittingGenerator:OnOffISRMode 0
set theSplittingGenerator:OnOffISR_QCDMode 1
set theSplittingGenerator:OnOffISR_QEDMode 1
set theSplittingGenerator:OnOffISR_EWKMode 1
set theSplittingGenerator:OnOffFSRMode 1
set theSplittingGenerator:OnOffFSR_QCDMode 1
set theSplittingGenerator:OnOffFSR_QEDMode 1
set theSplittingGenerator:OnOffFSR_EWKMode 1
set theSplittingGenerator:OnOffUtoUGsplittingMode 1
set theSplittingGenerator:OnOffDtoDGsplittingMode 1
set theSplittingGenerator:OnOffStoSGsplittingMode 1
set theSplittingGenerator:OnOffCtoCGsplittingMode 1
set theSplittingGenerator:OnOffBtoBGsplittingMode 1
set theSplittingGenerator:OnOffTtoTGsplittingMode 1
set theSplittingGenerator:OnOffGtoGGsplittingMode 1
set theSplittingGenerator:OnOffGtoUUbarsplittingMode 1
set theSplittingGenerator:OnOffGtoDDbarsplittingMode 1
set theSplittingGenerator:OnOffGtoSSbarsplittingMode 1
set theSplittingGenerator:OnOffGtoCCbarsplittingMode 1
set theSplittingGenerator:OnOffGtoBBbarsplittingMode 1
# only for test purposes (no mass implemented in GtoQQbarSplitfun!):
set theSplittingGenerator:OnOffGtoTTbarsplittingMode 1
set theSplittingGenerator:OnOffUtoUGammasplittingMode 1
set theSplittingGenerator:OnOffDtoDGammasplittingMode 1
set theSplittingGenerator:OnOffStoSGammasplittingMode 1
set theSplittingGenerator:OnOffCtoCGammasplittingMode 1
set theSplittingGenerator:OnOffBtoBGammasplittingMode 1
set theSplittingGenerator:OnOffTtoTGammasplittingMode 1
#
cd /Defaults/Handlers/Hadronization/Cluster
set theColourReconnector:ClReco 0
set theColourReconnector:PReco  1.0/9.0
set theClusterFissioner:ClMax  3.35*GeV
set theClusterFissioner:ClPow  2.0
set theClusterFissioner:PSplt1 1.0
set theClusterFissioner:PSplt2 1.0
set theLightClusterDecayer:B1Lim 0.0
set theClusterDecayer:ClDir1 1
set theClusterDecayer:ClDir2 1
set theClusterDecayer:ClSmr1 0.0
set theClusterDecayer:ClSmr2 0.0
set theHadronSelector:PwtDquark  1.0
set theHadronSelector:PwtUquark  1.0
set theHadronSelector:PwtSquark  1.0
set theHadronSelector:PwtCquark  1.0
set theHadronSelector:PwtBquark  1.0
set theHadronSelector:PwtDIquark 1.0
set theHadronSelector:SngWt      1.0
set theHadronSelector:DecWt      1.0
#

#these are commented in HerwigDefaults.in
#create /Pythia7/SubProcessHandler SimpleEE2QQ
#insert SimpleEE2QQ:MatrixElements[0] /Defaults/MatrixElements/MEee2gZ2qq
#set SimpleEE2QQ:PartonExtractor SimpleExtractor
#insert SimpleLEPHandler:SubProcessHandlers[0] SimpleEE2QQ

cd /Defaults/MatrixElements
create /Herwig++/MEee2gZ2bb MEee2gZ2bb HwMEold.so
#set MEee2gZ2bb:PhaseSpaceGenerator PS2to2Generic
create /ThePEG/SubProcessHandler SimpleEE2BB
insert SimpleEE2BB:MatrixElements[0] /Defaults/MatrixElements/MEee2gZ2bb
set SimpleEE2BB:PartonExtractor /Defaults/Handlers/StandardExtractor
set /Defaults/Handlers/SimpleLEPHandler:SubProcessHandlers[0] SimpleEE2BB
# insert /Defaults/Handlers/SimpleLEPHandler:SubProcessHandlers[0] SimpleEE2BB

cd /Defaults/Generators
#set SimpleLEPGenerator:EventHandler:MinWeight 0.2
set SimpleLEPGenerator:NumberOfEvents 100000
#set SimpleLEPGenerator:RandomNumberGenerator:Seed 12345678 
set SimpleLEPGenerator:DebugLevel 1
set SimpleLEPGenerator:PrintEvent 10
set SimpleLEPGenerator:MaxErrors 100
set SimpleLEPGenerator:Strategy /Defaults/ThePEGStrategy
set SimpleLEPGenerator:EventHandler:LuminosityFunction:Energy 91.2
set SimpleLEPGenerator:EventHandler:DecayHandler /Defaults/Handlers/StandardDecayHandler
#
saverun LEPbb SimpleLEPGenerator

