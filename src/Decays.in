#decaymode b'->s,cbar,c; 0.250 1 /Defaults/Decays/DecayME100
#decaymode b'->d,ubar,c; 0.250 1 /Defaults/Decays/DecayME100
#decaymode b'->mu-,nu_mubar,c; 0.085 1 /Defaults/Decays/DecayME100
#decaymode b'->e-,nu_ebar,c; 0.085 1 /Defaults/Decays/DecayME100
#decaymode b'->tau-,nu_taubar,c; 0.080 1 /Defaults/Decays/DecayME100
