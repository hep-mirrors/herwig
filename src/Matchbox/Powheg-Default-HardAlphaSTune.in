# tune where the world average perutbative alphaS is used for the hard me
# and matching and the shower alpha_S tuned seperately
# shower

set /Herwig/Shower/QtoQGSudakov:pTmin 2.01
set /Herwig/Shower/GtoGGSudakov:pTmin 2.01
set /Herwig/Shower/GtoQQbarSudakov:pTmin 2.01
set /Herwig/Shower/GtobbbarSudakov:pTmin 2.01
set /Herwig/Shower/GtoccbarSudakov:pTmin 2.01
set /Herwig/Shower/QtoGQSudakov:pTmin 2.01
set /Herwig/Shower/utoGuSudakov:pTmin 2.01
set /Herwig/Shower/dtoGdSudakov:pTmin 2.01

set /Herwig/Shower/AlphaQCD:AlphaMZ 0.136

# hadronization
set /Herwig/Hadronization/ClusterFissioner:ClMaxLight  3.91*GeV
set /Herwig/Hadronization/ClusterFissioner:ClPowLight  1.14
set /Herwig/Hadronization/ClusterFissioner:PSplitLight 1.02
set /Herwig/Hadronization/ClusterDecayer:ClDirLight    1
set /Herwig/Hadronization/ClusterDecayer:ClSmrLight    0.78
set /Herwig/Hadronization/HadronSelector:PwtSquark     0.47
set /Herwig/Hadronization/HadronSelector:PwtDIquark    0.25

set /Herwig/Hadronization/ClusterFissioner:ClMaxCharm  3.49*GeV
set /Herwig/Hadronization/ClusterFissioner:ClPowCharm  2.00
set /Herwig/Hadronization/ClusterFissioner:PSplitCharm 1.30
set /Herwig/Hadronization/ClusterDecayer:ClDirCharm 1
set /Herwig/Hadronization/ClusterDecayer:ClSmrCharm 0.
set /Herwig/Hadronization/LightClusterDecayer:SingleHadronLimitCharm 0.0

set /Herwig/Hadronization/ClusterFissioner:ClMaxBottom  6.22*GeV
set /Herwig/Hadronization/ClusterFissioner:ClPowBottom  0.94
set /Herwig/Hadronization/ClusterFissioner:PSplitBottom 0.47
set /Herwig/Hadronization/ClusterDecayer:ClDirBottom 1
set /Herwig/Hadronization/ClusterDecayer:ClSmrBottom 0.
set /Herwig/Hadronization/LightClusterDecayer:SingleHadronLimitBottom 0.12

