# insert SubProcess:MatrixElements[0] MEee2VV
# higgs+Z
# insert SubProcess:MatrixElements[0] MEee2ZH
# higgs+e+e-/nu_enu_ebar via VBF
# insert SubProcess:MatrixElements[0] MEee2HiggsVBF
##################################################
# NLO powheg processes
##################################################
#set /Herwig/Shower/ShowerHandler:HardEmission POWHEG
#insert SubProcess:MatrixElements 0 PowhegMEee2gZ2qq
#insert SubProcess:MatrixElements 0 PowhegMEee2gZ2ll


cd /Herwig/Decays
#create Herwig::TauDecayer2 Tau2PionsCzyz
#create Herwig::TwoPionCzyzCurrent TwoPionCzyzCurrent
#set Tau2PionsCzyz:WeakCurrent TwoPionCzyzCurrent
#set /Herwig/Particles/tau-/tau-->pi-,pi0,nu_tau;:Decayer Tau2PionsCzyz
#set Tau2PionsCzyz:Initialize 1
#create Herwig::TauDecayer2 Tau2KaonsCzyz
#create Herwig::TwoKaonCzyzCurrent TwoKaonCzyzCurrent
#set Tau2KaonsCzyz:WeakCurrent TwoKaonCzyzCurrent
#set /Herwig/Particles/tau-/tau-->K-,K0,nu_tau;:Decayer Tau2KaonsCzyz
set Tau3Meson:Initialize 1
set Tau3Meson:Points 1000000
set Tau3Kaon:Initialize 1
set Tau3Kaon:Points 1000000
set Tau3Pion:Initialize 1
set Tau3Pion:Points 1000000


#decaymode tau+->rho+,nu_taubar; 0.108235 1 /Herwig/Decays/Tau1Vector

#set Tau1Vector:Initialize 1
#set Tau1Vector:Points 10000000
#set Tau1Meson:Initialize 1
