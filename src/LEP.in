# set /Herwig/Decays/WSB:Initialize 1
# set /Herwig/Decays/BZVector:Initialize 1
# set /Herwig/Decays/BZScalar:Initialize 1
# set /Herwig/Decays/Melikhov:Initialize 1
# set /Herwig/Decays/MelikhovStech:Initialize 1
# set /Herwig/Decays/BaryonLight2:Initialize 1
