#set /Herwig/Decays/:Initialize 1
#set /Herwig/Decays/:Initialize 1
#set /Herwig/Particles/D0/D0->K-,pi+,pi0;:Decayer /Herwig/Decays/DtoKPiPiMarkIII
#set  /Herwig/Decays/DtoKPiPiMarkIII:Initialize 1
#set  /Herwig/Decays/DtoKPiPiMarkIII:Points 1000000
# e+e- > l+l-
# insert SubProcess:MatrixElements[0] MEee2gZ2ll
