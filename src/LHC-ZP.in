# -*- ThePEG-repository -*-

##################################################
# Example generator for the Leptoquark model
# in hadron collisions
# The best way to use this is to make your own 
# copy of this file and edit that as you require.
#
# The first section loads the model file which 
# does not contain anything that users need to touch.
#
# The second section contains the user settings.
###################################################

read snippets/PPCollider.in

# Set emission to POWHEG for radiation in decays
set /Herwig/Shower/ShowerHandler:HardEmission POWHEG

# read model
read Zprime.model

set /Herwig/Particles/t:Synchronized Not_synchronized
set /Herwig/Particles/tbar:Synchronized Not_synchronized


#set /Herwig/Particles/t/t->b,bbar,c;:YesNo Yes
#set /Herwig/Particles/t/t->b,c,dbar;:YesNo Yes
#set /Herwig/Particles/t/t->b,c,sbar;:YesNo Yes
#set /Herwig/Particles/t/t->b,sbar,u;:YesNo Yes
#set /Herwig/Particles/t/t->b,u,dbar;:YesNo Yes
#set /Herwig/Particles/t/t->nu_e,e+,b;:YesNo No
#set /Herwig/Particles/t/t->nu_mu,mu+,b;:YesNo No
#set /Herwig/Particles/t/t->nu_tau,tau+,b;:YesNo No
#set /Herwig/Particles/tbar/tbar->b,bbar,cbar;:YesNo No
#set /Herwig/Particles/tbar/tbar->bbar,cbar,d;:YesNo No
#set /Herwig/Particles/tbar/tbar->bbar,cbar,s;:YesNo No
#set /Herwig/Particles/tbar/tbar->bbar,s,ubar;:YesNo No
#set /Herwig/Particles/tbar/tbar->bbar,ubar,d;:YesNo No
#set /Herwig/Particles/tbar/tbar->nu_ebar,e-,bbar;:YesNo Yes
#set /Herwig/Particles/tbar/tbar->nu_mubar,mu-,bbar;:YesNo Yes
#set /Herwig/Particles/tbar/tbar->nu_taubar,tau-,bbar;:YesNo No

set /Herwig/Particles/t/t->b,bbar,c;:YesNo No
set /Herwig/Particles/t/t->b,c,dbar;:YesNo No
set /Herwig/Particles/t/t->b,c,sbar;:YesNo No
set /Herwig/Particles/t/t->b,sbar,u;:YesNo No
set /Herwig/Particles/t/t->b,u,dbar;:YesNo No
set /Herwig/Particles/t/t->nu_e,e+,b;:YesNo Yes
set /Herwig/Particles/t/t->nu_mu,mu+,b;:YesNo Yes
set /Herwig/Particles/t/t->nu_tau,tau+,b;:YesNo No
set /Herwig/Particles/tbar/tbar->b,bbar,cbar;:YesNo Yes
set /Herwig/Particles/tbar/tbar->bbar,cbar,d;:YesNo Yes
set /Herwig/Particles/tbar/tbar->bbar,cbar,s;:YesNo Yes
set /Herwig/Particles/tbar/tbar->bbar,s,ubar;:YesNo Yes
set /Herwig/Particles/tbar/tbar->bbar,ubar,d;:YesNo Yes
set /Herwig/Particles/tbar/tbar->nu_ebar,e-,bbar;:YesNo No
set /Herwig/Particles/tbar/tbar->nu_mubar,mu-,bbar;:YesNo No
set /Herwig/Particles/tbar/tbar->nu_taubar,tau-,bbar;:YesNo No

##################################################
#
# This section contains the user defined settings
#
##################################################
# Example hard process: Incoming proton, outgoing leptoquarks
cd /Herwig/NewPhysics

set HPConstructor:Processes Exclusive

insert HPConstructor:Incoming 0 /Herwig/Particles/u
insert HPConstructor:Incoming 1 /Herwig/Particles/ubar
insert HPConstructor:Incoming 2 /Herwig/Particles/d
insert HPConstructor:Incoming 3 /Herwig/Particles/dbar
insert HPConstructor:Incoming 4 /Herwig/Particles/s
insert HPConstructor:Incoming 5 /Herwig/Particles/sbar
insert HPConstructor:Incoming 6 /Herwig/Particles/c
insert HPConstructor:Incoming 7 /Herwig/Particles/cbar
insert HPConstructor:Incoming 8 /Herwig/Particles/g

# Comment out the following line if Axigluon model is selected

insert /Herwig/NewPhysics/HPConstructor:Excluded 0 /Herwig/Particles/g
insert /Herwig/NewPhysics/HPConstructor:Excluded 1 /Herwig/Particles/t
insert /Herwig/NewPhysics/HPConstructor:Excluded 2 /Herwig/Particles/tbar


insert HPConstructor:Outgoing 0 /Herwig/Particles/t
insert HPConstructor:Outgoing 1 /Herwig/Particles/tbar

# Intrinsic pT tune extrapolated to LHC energy
set /Herwig/Shower/ShowerHandler:IntrinsicPtGaussian 2.2*GeV


cd /Herwig/Analysis
set Basics:CheckQuark false

# Cuts
cd /Herwig/Cuts
set JetKtCut:MinKT 0.0*GeV
set Cuts:MHatMax 13000.0*GeV
set Cuts:MHatMin 0.0*GeV
set PhotonKtCut:MinKT 0.0*GeV
set PhotonKtCut:MinEta -10.
set PhotonKtCut:MaxEta  10.
set MassCut:MinM 0.*GeV

# Other parameters for run
cd /Herwig/Generators
saverun LHC-ZP EventGenerator
