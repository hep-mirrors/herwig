set /Herwig/Particles/B_s0:Stable 0
set /Herwig/Particles/Lambda_b0:Stable 0
set /Herwig/Particles/Xi_b0:Stable 0
set /Herwig/Particles/Xi_b-:Stable 0
set /Herwig/Particles/Omega_b-:Stable 0

